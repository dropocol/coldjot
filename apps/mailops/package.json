{
    "name": "mailops",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/server.ts",
        "build": "NODE_OPTIONS='--max-old-space-size=4096' tsup",
        "start": "node --expose-gc dist/server.js",
        "build:dev": "tsup",
        "build:prod": "tsup",
        "start:prod": "pm2 start ecosystem.config.cjs --env production",
        "start:prod:daemon": "pm2 start ecosystem.config.cjs --env production",
        "start:prod:watch": "pm2 start ecosystem.config.cjs --env production --no-daemon",
        "stop:prod": "pm2 stop ecosystem.config.cjs",
        "restart:prod": "pm2 restart ecosystem.config.cjs --env production",
        "reload:prod": "pm2 reload ecosystem.config.cjs --env production",
        "delete:prod": "pm2 delete ecosystem.config.cjs",
        "save:prod": "pm2 save",
        "logs:prod": "pm2 logs",
        "logs:prod:error": "pm2 logs --err --lines 200",
        "logs:prod:out": "pm2 logs --out --lines 200",
        "logs:prod:json": "pm2 logs --json",
        "logs:prod:format": "pm2 logs --format",
        "logs:prod:clear": "pm2 flush",
        "logs:prod:rotate": "pm2 logrotate -u mailops",
        "monit:prod": "pm2 monit",
        "status:prod": "pm2 status",
        "dev:debug": "NODE_OPTIONS='--max-old-space-size=4096 --inspect' tsx watch --inspect src/server.ts",
        "lint": "eslint \"src/**/*.ts\"",
        "clean": "rimraf .turbo node_modules dist .tsbuildinfo",
        "clean:logs": "rimraf logs/*.log",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "dev-2": "nodemon --watch src -e ts,json --exec \"npm run build && npm run start\"",
        "dev:debug-2": "NODE_OPTIONS='--max-old-space-size=4096 --inspect' nodemon --watch src -e ts,json --exec \"npm run build && npm run start\""
    },
    "dependencies": {
        "@coldjot/database": "*",
        "@coldjot/types": "*",
        "@types/nodemailer": "^6.4.17",
        "bull": "^4.11.3",
        "cors": "^2.8.5",
        "date-fns": "^2.30.0",
        "date-fns-tz": "^2.0.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "googleapis": "^126.0.1",
        "ioredis": "^5.3.2",
        "luxon": "^3.5.0",
        "pino": "^8.15.1",
        "pino-http": "^8.5.1",
        "pino-pretty": "^10.2.0",
        "quoted-printable": "^1.0.1",
        "sinon": "^19.0.2",
        "@bull-board/api": "^6.5.4",
        "bullmq": "^5.34.5",
        "pm2": "^5.3.0"
    },
    "devDependencies": {
        "@types/bull": "^4.10.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/luxon": "^3.4.2",
        "@types/node": "^20.6.0",
        "@types/quoted-printable": "^1.0.0",
        "@types/sinon": "^17.0.3",
        "concurrently": "^8.2.2",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.1",
        "tsx": "^4.7.0",
        "typescript": "^5.2.2"
    }
}