{
    "extends": [
        "//"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ]
        },
        "build:prod": {
            "cache": true,
            "persistent": false,
            "dependsOn": [
                "^@coldjot/database#build:prod",
                "^@coldjot/types#build:prod"
            ],
            "env": [
                "PORT",
                "WEB_APP_URL",
                "MAILOPS_API_URL",
                "TRACK_API_URL",
                "DATABASE_URL",
                "REDIS_*",
                "GOOGLE_*",
                "QUEUE_PREFIX"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "start:prod": {
            "cache": true,
            "persistent": true,
            "dependsOn": [
                "build:prod"
            ],
            "env": [
                "PORT",
                "WEB_APP_URL",
                "MAILOPS_API_URL",
                "TRACK_API_URL",
                "DATABASE_URL",
                "REDIS_*",
                "GOOGLE_*",
                "QUEUE_PREFIX"
            ]
        },
        "start:prod:watch": {
            "cache": true,
            "persistent": true,
            "dependsOn": [
                "build:prod"
            ],
            "env": [
                "PORT",
                "WEB_APP_URL",
                "MAILOPS_API_URL",
                "TRACK_API_URL",
                "DATABASE_URL",
                "REDIS_*",
                "GOOGLE_*",
                "QUEUE_PREFIX"
            ]
        }
    }
}