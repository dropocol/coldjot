{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env*"
    ],
    "globalPassThroughEnv": [
        "NODE_ENV",
        "APP_ENV"
    ],
    "globalEnv": [
        "DATABASE_URL",
        "SHADOW_DATABASE_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "outputs": []
        },
        "type-check": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}