{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [],
    "globalPassThroughEnv": [
        "LOG_LEVEL",
        "APP_ENV",
        "NODE_ENV",
        "DATABASE_URL"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build:dev": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "build:prod": {
            "dependsOn": [
                "^build:prod"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "start:dev": {
            "cache": false
        },
        "start:prod": {
            "cache": false
        },
        "db:deploy": {
            "cache": false,
            "env": [
                "DATABASE_URL"
            ]
        },
        "db:deploy:prod": {
            "cache": false,
            "env": [
                "DATABASE_URL"
            ]
        }
    }
}