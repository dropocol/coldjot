{
    "name": "mailjot",
    "private": true,
    "packageManager": "npm@10.0.0",
    "scripts": {
        "dev": "APP_ENV=development turbo run dev",
        "dev:staging": "APP_ENV=staging turbo run dev",
        "dev:prod": "APP_ENV=production turbo run dev",
        "build:dev": "APP_ENV=development turbo run build",
        "build:staging": "APP_ENV=staging turbo run build",
        "build:prod": "APP_ENV=production turbo run build",
        "start:dev": "APP_ENV=development turbo run start",
        "start:staging": "APP_ENV=staging turbo run start",
        "start:prod": "APP_ENV=production turbo run start",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules",
        "debug:env": "APP_ENV=development turbo run dev --dry=json",
        "check:env": "APP_ENV=development node -e \"console.log(process.env)\"",
        "redis:up": "docker-compose up -d redis",
        "redis:down": "docker-compose down",
        "redis:logs": "docker-compose logs -f redis",
        "dev:with-redis": "npm run redis:up && npm run dev",
        "db:up": "docker-compose up -d postgres",
        "db:down": "docker-compose down",
        "db:logs": "docker-compose logs -f postgres",
        "db:migrate": "cd packages/database && dotenv -e .env -- npx prisma migrate dev",
        "db:push": "cd packages/database && dotenv -e .env -- npx prisma db push",
        "db:reset": "cd packages/database && dotenv -e .env -- npx prisma migrate reset --force",
        "services:up": "docker-compose up -d",
        "services:down": "docker-compose down",
        "dev:with-services": "npm run services:up && npm run dev"
    },
    "engines": {
        "node": ">=20"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "dotenv-cli": "^7.4.4",
        "i": "^0.3.7",
        "npm": "^10.9.2",
        "prettier": "^3.1.0",
        "turbo": "^2.3.3"
    }
}
