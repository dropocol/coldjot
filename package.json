{
    "name": "mailjot",
    "private": true,
    "packageManager": "npm@10.0.0",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "engines": {
        "node": ">=20"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "prettier": "^3.1.0",
        "turbo": "^2.3.3"
    }
}