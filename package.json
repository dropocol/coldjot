{
    "name": "mailjot",
    "private": true,
    "packageManager": "npm@10.0.0",
    "scripts": {
        "dev": "APP_ENV=development turbo run dev",
        "dev:staging": "APP_ENV=staging turbo run dev",
        "dev:prod": "APP_ENV=production turbo run dev",
        "build:dev": "APP_ENV=development turbo run build",
        "build:staging": "APP_ENV=staging turbo run build",
        "build:prod": "APP_ENV=production turbo run build",
        "start:dev": "APP_ENV=development turbo run start",
        "start:staging": "APP_ENV=staging turbo run start",
        "start:prod": "APP_ENV=production turbo run start",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules",
        "debug:env": "APP_ENV=development turbo run dev --dry=json",
        "check:env": "APP_ENV=development node -e \"console.log(process.env)\""
    },
    "engines": {
        "node": ">=20"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "i": "^0.3.7",
        "npm": "^10.9.2",
        "prettier": "^3.1.0",
        "turbo": "^2.3.3"
    }
}
